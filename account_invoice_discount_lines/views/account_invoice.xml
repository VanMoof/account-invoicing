<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="invoice_supplier_form" model="ir.ui.view">
        <field name="name">Add applied discount field to invoice line in supplier invoice</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']"
                   position="after">
                <field name="discount_display" string="Disc (%)"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']"
                   position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="invoice_form" model="ir.ui.view">
        <field name="name">Add applied discount field to invoice line in customer invoice</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']"
                   position="after">
                <field name="discount_display" string="Disc (%)"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']"
                   position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>
</odoo>

